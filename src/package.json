{
  "name": "pkg-egg-example",
  "version": "1.0.0",
  "description": "Package the egg.js code by pkg example",
  "private": true,
  "bin": "build.js",
  "pkg": {
    "assets": [
      "./config/*.js",
      "./app.js",
      "./app/**/*.js",
      "./node_modules/nanoid/**/*.js"
    ]
  },
  "egg": {
    "declarations": true
  },
  "dependencies": {
    "egg": "^2.15.1",
    "egg-scripts": "^2.11.0"
  },
  "devDependencies": {
    "autod": "^3.0.1",
    "autod-egg": "^1.1.0",
    "egg-bin": "^4.11.0",
    "egg-ci": "^1.11.0",
    "egg-mock": "^3.21.0",
    "eslint": "^5.13.0",
    "eslint-config-egg": "^7.1.0"
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "scripts": {
    "build": "pkg . --targets node8-win-x64 --out-path ./  --debug",
    "start": "egg-scripts start --daemon --title=egg-server-pkg-egg-example",
    "stop": "egg-scripts stop --title=egg-server-pkg-egg-example",
    "dev": "egg-bin dev",
    "debug": "egg-bin debug",
    "test": "npm run lint -- --fix && npm run test-local",
    "test-local": "egg-bin test",
    "cov": "egg-bin cov",
    "lint": "eslint .",
    "ci": "npm run lint && npm run cov",
    "autod": "autod"
  },
  "ci": {
    "version": "10"
  },
  "repository": {
    "type": "git",
    "url": ""
  },
  "author": "LH",
  "license": "MIT"
}